<div
  class="mo-modal {% block modal_class %}{% endblock %}"
  id="{% block modal_id %}{% endblock %}"
  {% if modal_on %}
    style="display:block"
  {% endif %}
>
  <div class="mo-modal__backdrop"></div>

  <div class="mo-modal__frame">
    <div class="mo-modal__dialog">

      <div class="mo-modal__content">
        {% block modal_content %}
        {% endblock %}
      </div>

    </div>

    <button class="mo-modal__close">
      {% include 'components/svg' with {id: 'times'} only %}
    </button>
  </div>

</div>
