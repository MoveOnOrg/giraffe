    <div class="donate-confirm__receipt">
      <div class="donate-receipt">
        <div class="donate-receipt__heading">
          DONATION SUMMARY
        </div>
        <div class="donate-receipt__details">
          <div class="donate-receipt__row">
            <div class="donate-receipt__field">Donate Amount</div>
            <div class="donate-receipt__value">$50.00</div>
