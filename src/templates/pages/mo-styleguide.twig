{% set markup = { blocks: ['markup']} %}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">                <meta charset="utf-8">
        <title>{% block title %}Move On Styleguide{% endblock %}</title>
        <link rel="stylesheet" href="styles/vendors.css" />
        <link rel="stylesheet" href="styles/main.css" />
        <link rel="stylesheet" href="styles/styleguide.css" />
    </head>
    <body class="giraffe {% block bodyclass %}styleguide {% endblock %}">
        <div style="display:none">{% include 'components/symbol/svg/sprite.symbol.svg' %}</div>
        <div class="wrapper">

          {% include 'styleguide/header' %}

          <div class="stylguide-content">

            {# COLOR PALETTE #}
            {% embed 'styleguide/block' %}
                {% block heading %}Color Palette{% endblock %}
                {% block content %}
                    <table class="styleguide-color" style="width: 100%;">
                        {% set colors = [
                            ['#ffffff', '$white'],
                            ['#f3f3f3', '$off-white'],
                            ['#cacaca', '$gray'],
                            ['#a7a7a7', '$light-gray'],
                            ['#696a6a', '$slate-gray'],
                            ['rgba(34, 34, 34, 0.38)', '$dark-gray-38'],
                            ['#222222', '$dark-gray'],
                            ['#000000', '$black'],
                        ] %}
                        {% set colors2 = [
                            ['#005680', '$deep-sea-blue'],
                            ['#0080bf', '$cerulean'],
                            ['#00abff', '$azure'],
                            ['#99ddff', '$light-blue'],
                            ['#e5f5ff', '$ice-blue'],
                            ['#ea1c24', '$red']
                        ] %}
                        <tbody>
                            <tr>
                                <td>Color</td>
                                {% for item in colors %}
                                    <td><div class="styleguide-color__item" style="background-color: {{ item[0] }};"></div></td>
                                {% endfor %}
                            </tr>
                            <tr>
                                <td>SASS Variable</td>
                                {% for item in colors %}
                                    <td><div class="styleguide-color__variable">{{ item[1] }}</div></td>
                                {% endfor %}
                            </tr>
                            <tr>
                                <td>Color</td>
                                {% for item in colors2 %}
                                    <td><div class="styleguide-color__item" style="background-color: {{ item[0] }};"></div></td>
                                {% endfor %}
                            </tr>
                            <tr>
                                <td>SASS Variable</td>
                                {% for item in colors2 %}
                                    <td><div class="styleguide-color__variable">{{ item[1] }}</div></td>
                                {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                {% endblock %}
            {% endembed %}

            {# BUTTONS #}
            {% embed 'styleguide/block' with markup%}
                {% block heading %}Buttons{% endblock %}
                {% block content %}
                   <div>
                        <button class="btn azure">Simple Button</button>
                        <button class="btn azure">Button With Icon <svg><use xlink:href="#caret-right" /></svg></button>
                        <button class="btn" disabled >Disabled Button</button>
                        <br><br>
                        <h3>Available Buttons:</h3>
                        <br>
                        <p><button class="btn azure">Azure</button> <code>.btn .azure</code></p><br>
                        <p><button class="btn transparent">Transparent</button> <code>.btn .transparent</code></p><br>
                        {# <p><button class="mo-btn styleguide__button--transparent-dark">Transparent-Dark</button> <code class="SASS">@include mo-btn--transparent-dark</code></p><br> #}
                        <p><div style="background-color: #ddd"><button class="btn transparent-light">Transparent-Light</button> <code>.btn .transparent-light</code></div></p><br>
                    </div>
                {% endblock %}
                {% block markup %}<button class="btn azure">Azure</button>{% endblock %}
            {% endembed %}

            {# ICONS #}
            {% embed 'styleguide/block' with {blocks: ['markup']} %}
                {% block heading %}Icons Set{% endblock %}
                {% block content %}
                    <div class="styleguide-icons">
                        {% set icons = [
                            'burger',
                            'caret-down',
                            'caret-right',
                            'check',
                            'close',
                            'document-add',
                            'edit',
                            'facebook',
                            'flag-outline',
                            'flag-solid',
                            'instagram',
                            'link',
                            'mail',
                            'twitter'
                        ] %}
                        {% for icon in icons %}
                            <div class="styleguide-icon__icon">
                                <div class="styleguide-icon__icon__graphic"><svg><use xlink:href="#{{icon}}" x="" y=""/></svg></div>
                                <div class="styleguide-icon__icon__name">{{icon}}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% endblock %}
                {% block markup %}<svg><use xlink:href="#{{facebook}}"/></svg>{% endblock %}
            {% endembed %}


            {# TYPOGRAPHY #}
            {% embed 'styleguide/block' with markup%}
                {% block heading %}Typography: Headings{% endblock %}
                {% block content %}
                    <h1>Heading 1</h1>
                    <h2>Heading 2</h2>
                    <h3>Heading 3</h3>
                    <h4>Heading 4</h4>
                    <h5>Heading 5</h5>
